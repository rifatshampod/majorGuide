<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homepage"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/home_ad"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What do you want to look for?"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:hint="Search here"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext_shadow"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/video_btn"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:drawableTop="@drawable/home_video"
                android:text="Video"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:id="@+id/cv_btn"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:drawableTop="@drawable/home_cv"
                android:text="CV"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/jobs_btn"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:drawableTop="@drawable/home_job"
                android:text="Jobs"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/major_btn"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:drawableTop="@drawable/home_major"
                android:text="Major"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/books_btn"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:drawableTop="@drawable/home_book"
                android:text="Books"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/agent_btn"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:drawableTop="@drawable/home_agent"
                android:text="Agent"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />
        </GridLayout>


    </LinearLayout>


</FrameLayout>